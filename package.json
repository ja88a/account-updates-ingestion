{
  "name": "json-stream-proc",
  "version": "0.0.1",
  "description": "Simulation of the casting, ingestion & handling of accounts' update events issued by a blockchain",
  "author": "Jabba Ã¸1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "nest build",
    "docker:build": "docker build -t json-stream-proc .",
    "docker:build:prod": "npm i --package-lock-only true && docker build -f Dockerfile.prod -t json-stream-proc-prod .",
    "docker:cleanup": "docker container rm -f -v json-stream-proc json-stream-proc-prod && docker image rm -f json-stream-proc json-stream-proc-prod",
    "docker:run": "docker run -p8080:3000 --name json-stream-proc json-stream-proc",
    "docker:run:prod": "docker run -p8080:3000 --name json-stream-proc-prod json-stream-proc-prod -l json-stream-proc-prod",
    "docker:sh": "docker run -it --entrypoint sh json-stream-proc",
    "docker:sh:prod": "docker run -it --entrypoint sh json-stream-proc-prod",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "reset": "rm -rf ./node_modules ./coverage ./dist ./build ./combined.log ./error.log",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "start": "nest start",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test": "jest",
    "webpack:build": "webpack --config webpack.prod.js",
    "webpack:start": "node dist/server"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.4",
    "@nestjs/core": "^10.2.4",
    "@nestjs/platform-express": "^10.2.4",
    "@nestjs/serve-static": "^4.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "service": "^0.1.4",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "webpack": "5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals":"^3.0.0",
    "run-script-webpack-plugin": "^0.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
